<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo_repro_white"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/logo_repro_white"
        android:supportsRtl="true"
        android:theme="@style/Theme.Repro"
        tools:targetApi="31">
        <activity
            android:name=".ui.auth.LogoutActivity"
            android:exported="false" />
        <!-- LoginActivity -->
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.Repro.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- RegisterActivity -->
        <activity
            android:name=".ui.auth.RegisterActivity"
            android:exported="true"
            android:theme="@style/Theme.Repro.NoActionBar"></activity> <!-- MainActivity -->
        <activity
            android:name=".api.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Repro.NoActionBar"></activity>
    </application>

</manifest>